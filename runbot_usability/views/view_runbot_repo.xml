<odoo>

    <record id="view_runbot_repo_form" model="ir.ui.view">
        <field name="model">runbot.repo</field>
        <field name="inherit_id" ref="runbot.repo_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='repo_group']" position="after">
                <group string="Extra information">
                    <field name="path"/>
                    <field name="base"/>
                </group>
                <group string="Extra Buttons" col="8">
                    <button type="object" name="update_git" string="Update Git"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
